/* Custom tsconfig for electron code */

{
  "compilerOptions": {
    // require strict types (null-saftey)
    "strict": true,
    // tell TypeScript to generate ESM Syntax (import/export instead of require)
    "target": "ESNext",
    // tell TypeScript to requre ESM Syntax as input (including .js file imports)
    "module": "NodeNext",
    // define where to put compiled JavaScript
    "outDir": "../../dist-electron",
    // ignore errors from dependencies
    "skipLibCheck": true,
    // Add global types
    "types": ["../../types"]
  }
}
